<h1>Edit User Information</h1>

<% if @user.errors.any?%>
    <h2>The following errors prevented the form from being saved</h2>
    <ul>
        <% @user.errors.full_messages.each do |msg|%>
            <li><%= msg%></li>
        <%end%>
    </ul>
<%end%>
<%= form_with(model: @user, local: true) do |f|%>
    <p>
        <%= f.label :name%><br/>
        <%= f.text_field :name%>
    </p>
    <p>
        <%= f.label :lname%><br/>
        <%= f.text_field :lname%>
    </p>
    <p>
        <%= f.label :email%><br/>
        <%= f.text_field :email%>
    </p>
    <p>
        <%= f.label :address_1%><br/>
        <%= f.text_field :address_1%>
    </p>
    <p>
        <%= f.label :address_2%><br/>
        <%= f.text_field :address_2%>
    </p>
    <p>
        <%= f.label :city%><br/>
        <%= f.text_field :city%>
    </p>
    <p>
        <%= f.label :state%><br/>
        <%= f.text_field :state%>
    </p>
    <p>
        <%= f.label :country%><br/>
        <%= f.text_field :country%>
    </p>
    <p>
        <%= f.label :pincode%><br/>
        <%= f.text_field :pincode%>
    </p>
    <p>
        <%= f.label :phone_number%><br/>
        <%= f.text_field :phone%>
    </p>
    <p>
        <%= f.label :password%><br/>
        <%= f.password_field :password%>
    </p>
    <p><%= f.submit%></p>
<%end%>
<%= link_to "back", users_path%>